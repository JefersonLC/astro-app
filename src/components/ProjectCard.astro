---
import type { Project } from '../pages/index.astro';
import Category from './Category.astro';

const { project } = Astro.props as { project: Project };
---

<div class='bg-blue-200 py-6 px-2'>
  <div class='flex text-4xl px-8'>
    <div class='flex-grow text-green'>
      <i class='fa-regular fa-folder'></i>
    </div>
    <div
      class='flex-grow flex justify-end text-2xl gap-5 text-gray-100 hover:[&>a]:text-green'
    >
      <a href={project.sourceCode} target='_blank'>
        <i class='fa-brands fa-github'></i>
      </a>
      <a href={project.link} target='_blank'>
        <i class='fa-solid fa-up-right-from-square'></i>
      </a>
    </div>
  </div>
  <div class='px-6 py-4'>
    <h4 class='text-2xl text-gray-100'>{project.title}</h4>
    <p class='mt-2 text-gray-200'>{project.description}</p>
  </div>
  <div class='px-6 mt-4 flex gap-2'>
    {project.categories.map((category) => <Category>{category}</Category>)}
  </div>
</div>
