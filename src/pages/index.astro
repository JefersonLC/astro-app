---
import projects from '../utils/projects.json';
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { Icons } from '../utils/icons';

export interface Project {
  title: string;
  slug: string;
  description: string;
  languages: string[];
  sourceCode: string;
  link: string;
  stars: number;
  forks: number;
}
---

<Layout title='Home'>
  <Section>
    <div class='text-green sm:text-xl'>
      <h2>Hola, me llamo</h2>
    </div>
    <div class='text-3xl sm:text-5xl lg:text-7xl font-semibold text-gray-100'>
      <h3>Jeferson Limay.</h3>
    </div>
    <div class='text-gray-200 sm:text-xl mt-5 max-w-md'>
      <p>
        Soy estudiante de Tecnologías de la Información y Comunicación (TIC).
        Soy programador autodidacta que se dedica realizar cosas pequeñas en la
        web :)
      </p>
    </div>
    <div class='text-green mt-12'>
      <a
        href='https://github.com/JefersonLC'
        class='border py-4 px-6 border-green rounded-md hover:bg-green hover:text-blue-100'
      >
        Perfil de GitHub
      </a>
    </div>
  </Section>
  <Section>
    <div class='text-3xl sm:text-4xl font-semibold text-gray-100'>
      <h2 id='projects'>Algunos proyectos:</h2>
    </div>
    <div class='grid grid-cols-1 sm:grid-cols-2 gap-3 mt-6'>
      {projects.map((project: Project) => <ProjectCard project={project} />)}
    </div>
  </Section>
  <Section>
    <div class='text-3xl sm:text-4xl font-semibold text-gray-100'>
      <h2 id='projects'>Herramientas usadas:</h2>
    </div>
    <div class='grid grid-cols-2 xl:grid-cols-3 gap-3 mt-6'>
      {
        Icons.map((Icon) => (
          <div class='flex [&>svg]:min-w-[70px] [&>svg]:md:min-w-[10px]'>
            <Icon.icon />
            <span>{Icon.name}</span>
          </div>
        ))
      }
    </div>
  </Section>
</Layout>
